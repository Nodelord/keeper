{
  "compilerOptions": {
    "target": "ES2021",             
    "lib": ["ES2021", "DOM"],      
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,          // Keeps node_modules checks off
    "forceConsistentCasingInFileNames": true,

    "useUnknownInCatchVariables": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["src/**/*"]
}


